<UserControl
	x:Class="CustomNumericUpDown"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Height="27.027"
	Width="61.776">
	<Canvas
		Height="33.033"
		Width="68">
		<TextBox
			Name="_textBox"
			Width="49.478"
			Height="19.305"
			Canvas.Left="0.143"
			Canvas.Top="4.433"
			TextChanged="TextBoxValue_TextChanged"
			LostFocus="TextBoxValue_LostFocus"
			GotFocus="TextBoxValue_GotFocus" />
		<Button
			Name="buttonUp"
			FontSize="6"
			Padding="0"
			Height="13.013"
			Canvas.Left="49.621"
			Canvas.Top="0.143"
			Width="12.012"
			PreviewMouseLeftButtonDown="ButtonUp_PreviewMouseLeftButtonDown"
			PreviewMouseLeftButtonUp="ButtonUp_PreviewMouseLeftButtonUp">
			▲
		</Button>
		<Button
			Name="buttonDown"
			FontSize="6"
			Padding="0"
			Height="13.013"
			Canvas.Left="49.621"
			Canvas.Top="14.157"
			Width="12.012"
			PreviewMouseLeftButtonDown="ButtonDown_PreviewMouseLeftButtonDown"
			PreviewMouseLeftButtonUp="ButtonDown_PreviewMouseLeftButtonUp">
			▼
		</Button>
	</Canvas>
</UserControl>
