						KeyTip="X"
						Command="{StaticResource ClosePreviewCommand}" />
				</r:RibbonGroup>
				<r:RibbonGroup
					Name="m_grpNavigate"
					Header="Navigate"
					SmallImageSource="Images/Small_32bit/mailmergelastrecord.png">
