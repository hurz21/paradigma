				<r:RibbonGroup
					Name="m_grpPreview"
					Header="Preview"
					SmallImageSource="Images/Small_32bit/previewclose.png"
					CanAddToQuickAccessToolBarDirectly="False">
					<r:RibbonButton
						Name="m_btnClosePreview"
						Label="Close Preview"
						LargeImageSource="Images/Large_32bit/previewclose.png"
						SmallImageSource="Images/Small_32bit/previewclose.png"
