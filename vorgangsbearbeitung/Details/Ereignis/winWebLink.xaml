<Window x:Class="winWebLink"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="winWebLink" Height="330" Width="636" Background="AliceBlue">
    <DockPanel  >
        <StackPanel   >
            <TextBlock Text="URL:" Width="200" HorizontalAlignment="Left"/>
            <TextBox x:Name="tbWebLink" MinWidth="300" ></TextBox>
            <TextBlock Text="Beschreibung:" Width="200" HorizontalAlignment="Left"/>
            <TextBox x:Name="tbWebLinkDesc" MinWidth="300" Height="100"></TextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button IsDefault="True" Content="Speichern" Click="BtnSpeichern_Click" Margin="5"/>
                <Button IsCancel="True" Content="Abbruch" Click="BtnAbbruch_Click" Margin="5"/>
                <Button Content="Löschen" Click="BtnLoeschen_Click" Margin="5"/>
                <Button    Click="BtnWeb_Click" Margin="150,0,0,0" Height="128" Width="124" ToolTip="zeige Adresse im Web">
                    <Image  x:Name="myimageweb" Source="/paradigma;component/icons/ie.jpg"  ></Image>

                </Button>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
