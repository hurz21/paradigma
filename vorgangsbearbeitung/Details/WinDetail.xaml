<Window
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="Window_Detail" 
            xmlns:src="clr-namespace:paradigma"  
            Title="Paradigma - Die Vorgangsbearbeitung. (c) Dr. Feinen 2009"   ResizeMode="CanResizeWithGrip" 
            WindowState="Maximized"
            Height="900" Width="1745" AllowsTransparency="False" WindowStyle="ThreeDBorderWindow"
            x:Name="Window1"  Background="{StaticResource backg3}"  WindowStartupLocation="CenterScreen" 
            Margin="4"  AllowDrop="True"  >
    <Window.Resources>
        <src:MyFormatter x:Key="myformattjf" />
        <src:myGlobalz   x:Key="myGlobalz"/>
        <XmlDataProvider x:Key="XMLSourceComboBoxGemKRZ" />
        <XmlDataProvider x:Key="XMLSourceComboBoxEreignisse"    />
        <XmlDataProvider x:Key="XMLSourceComboBoxGISHintergrund"    />
        <XmlDataProvider x:Key="XMLSourceComboBoxParagraf" />
        <XmlDataProvider x:Key="XMLSourceComboBoxRaumNr" />
        <!--<XmlDataProvider x:Key="XMLSourceComboBoxBeteiligte"    />-->

        <Style x:Key="rowheaderDokuswithID" TargetType="{x:Type DataGridRowHeader}"  >
            <Setter Property="Content" Value="{Binding DOKUMENTID}" />
            <Setter Property="Width" Value="40" />
            <Setter Property="BorderBrush" Value="Black"/>
        </Style>

        <Style x:Key="dgRowStyle" TargetType="DataGridRow"  BasedOn="{StaticResource dgRowStyle}">

            <Setter Property="Background" Value="White" />
            <Style.Triggers>
                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                    <Setter Property="Background" Value="LightGray" />
                </Trigger>
                <Trigger Property="IsSelected"  Value="True">
                    <Setter Property="Background" Value="LightGoldenrodYellow" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="dgCellStyleRBLINK" TargetType="{x:Type DataGridCell}">
            <Setter Property="Background" Value="white" />
            <Setter Property="ContentTemplate" >
                <Setter.Value>
                    <DataTemplate>
                        <Button Click="gislink_click" Width="30" Content="{Binding ID}"/>
                        <!--<Ellipse Margin="2" Width="10"  Height="10" Fill="SlateGray"/>-->
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>







        <Style x:Key="dgCellStyleWF_checkbox" TargetType="{x:Type DataGridCell}">
            <Setter Property="Background" Value="white" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding ERLEDIGT}" Value="1">
                    <Setter Property="Background" Value="green" />
                    <Setter Property="ContentTemplate" >
                        <Setter.Value>
                            <DataTemplate >
                                <CheckBox IsChecked="True"  IsEnabled="False"/>
                                <!-- <Ellipse Margin="2" Width="10"  Height="10" Fill="SlateGray"/>-->
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding ERLEDIGT}" Value="0">
                    <Setter Property="Background" Value="green" />
                    <Setter Property="ContentTemplate" >
                        <Setter.Value>
                            <DataTemplate >
                                <CheckBox IsChecked="false" IsEnabled="False"/>
                                <!-- <Ellipse Margin="2" Width="10"  Height="10" Fill="SlateGray"/>-->
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="dgCellStyleRBTyp" TargetType="{x:Type DataGridCell}">
            <Setter Property="Background" Value="white" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding TYP}" Value="1">
                    <Setter Property="Background" Value="green" />
                    <Setter Property="ContentTemplate" >
                        <Setter.Value>
                            <DataTemplate >
                                <TextBox Text="Adresse"/>
                                <!-- <Ellipse Margin="2" Width="10"  Height="10" Fill="SlateGray"/>-->
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding TYP}" Value="2">
                    <Setter Property="Background" Value="green" />
                    <Setter Property="ContentTemplate" >
                        <Setter.Value>
                            <DataTemplate >
                                <TextBox Text="Flst"/>

                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding TYP}" Value="5">
                    <Setter Property="Background" Value="green" />
                    <Setter Property="ContentTemplate" >
                        <Setter.Value>
                            <DataTemplate >
                                <TextBox Text="Foto"/>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding TYP}" Value="7">
                    <Setter Property="Background" Value="green" />
                    <Setter Property="ContentTemplate" >
                        <Setter.Value>
                            <DataTemplate >
                                <TextBox Text="Punkt"/>
                                <!-- <Ellipse Margin="2" Width="10"  Height="10" Fill="SlateGray"/>-->
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding TYP}" Value="3">
                    <Setter Property="Background" Value="green" />
                    <Setter Property="ContentTemplate" >
                        <Setter.Value>
                            <DataTemplate >
                                <TextBox Text="Polygon"/>
                                <!-- <Ellipse Margin="2" Width="10"  Height="10" Fill="SlateGray"/>-->
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding TYP}" Value="4">
                    <Setter Property="Background" Value="green" />
                    <Setter Property="ContentTemplate" >
                        <Setter.Value>
                            <DataTemplate >
                                <TextBox Text="Strecke"/>
                                <!-- <Ellipse Margin="2" Width="10"  Height="10" Fill="SlateGray"/>-->
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="dgRowStyleRB" TargetType="{x:Type DataGridRow}" BasedOn="{StaticResource dgRowStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding STATUS}" Value="1">
                    <Setter Property="Foreground" Value="blue" />
                    <Setter Property="ToolTip" Value="Dieser Eintrag ist eine Verlinkung mit einem Verwandten Vorgang" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="dgRowStyleVerlauf" TargetType="{x:Type DataGridRow}" BasedOn="{StaticResource dgRowStyle}">
            <Style.Triggers>

                <DataTrigger Binding="{Binding Richtung}" Value="Eingang">
                    <Setter Property="Foreground" Value="blue" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Richtung}" Value="Ausgang">
                    <Setter Property="Foreground" Value="green" />
                </DataTrigger>
                <DataTrigger Binding="{Binding EreignisDokTyp}" Value="1">
                    <!--<Setter Property="Foreground" Value="Gray" />-->
                    <Setter Property="FontSize" Value="10" />

                </DataTrigger>
                <DataTrigger Binding="{Binding EreignisDokTyp}" Value="0">
                    <!--<Setter Property="Foreground" Value="Gray" />-->

                    <Setter Property="FontWeight" Value="Black" />
                </DataTrigger>


                <DataTrigger Binding="{Binding revisionssicher}" Value="1">
                    <Setter Property="Background" Value="pink" />
                </DataTrigger>

            </Style.Triggers>
            <!--<Setter Property="ToolTip">
                <Setter.Value>
                    <TextBlock Text="{Binding DATEINAMEEXT}"   />
                </Setter.Value>
            </Setter>-->
        </Style>

        <Style x:Key="dgRowStyleDokument" TargetType="{x:Type DataGridRow}" BasedOn="{StaticResource dgRowStyle}">
            <Style.Triggers>
                <!--<Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Green" />
                </Trigger>-->
                <DataTrigger Binding="{Binding revisionssicher}" Value="True">
                    <Setter Property="Background" Value="Pink" />
                </DataTrigger>

            </Style.Triggers>
        </Style>

    </Window.Resources>
