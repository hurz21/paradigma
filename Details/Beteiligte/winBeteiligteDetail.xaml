                    <TextBox   x:Name="tbNamenszusatz" 
					Text="{Binding sitzung.aktPerson.Namenszusatz, Source={StaticResource myGlobalz}, UpdateSourceTrigger=PropertyChanged}" 
					Width="90"  />
