    xmlns:System="clr-namespace:System;assembly=mscorlib" 
    x:Class="winBeteiligteDetail" 
	Title="Beteiligte: Details" Height="790.541" Width="1084.231" WindowStartupLocation="CenterScreen" x:Name="Window1"
