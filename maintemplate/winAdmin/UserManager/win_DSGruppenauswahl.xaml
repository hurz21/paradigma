<Window x:Class="win_DSGruppenauswahl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:paradigma"
        mc:Ignorable="d"
        Title="win_DSGruppenauswahl: Bitte eine Gruppen auswählen" Height="814.966" Width="601.361" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <DataGrid x:Name="dgGruppenDS" AutoGenerateColumns="True" DockPanel.Dock="Top"                    
                    EnableRowVirtualization="True" Margin="10"  
                      ItemsSource="{Binding}"  RowDetailsVisibilityMode="VisibleWhenSelected"  
                      HorizontalGridLinesBrush="Gray" VerticalGridLinesBrush="Gray"
                  SelectionChanged="dgGruppenDS_SelectionChanged"
                  ></DataGrid>
    </DockPanel>
</Window>
