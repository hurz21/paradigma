<Window x:Class="winNamenSuchModus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:paradigma"
        mc:Ignorable="d"
        Title="Suchmodus für Namen in den Beteiligten" Height="300" Width="510.23"
        WindowStartupLocation="CenterScreen">
    <DockPanel Margin="0,0,-135,0">
        <StackPanel>
            <StackPanel Margin="5" IsEnabled="False">
                <TextBlock Text="Option 1 : Max. Datenschutz"/>
                <RadioButton Content="Max. Datenschutz aktiviert" Margin="10" IsChecked="True"/>
                <TextBlock Text=" (es läßt sich NICHT nach Namen innerhalb der Beteiligten suchen)" Margin="10" FontSize="9"/>
            </StackPanel>

            <StackPanel Margin="5" IsEnabled="False">
                <TextBlock Text="Option 2 : Max. Bürgerservice"/>
                <RadioButton Content="Moderater Datenschutz aktiviert" Margin="10" />
                <TextBlock Text=" (es läßt sich nun nach Namen innerhalb der Beteiligten suchen)" Margin="10" FontSize="9"/>
            </StackPanel>
            <Button Content="Abbruch" IsCancel="True" Width="150" Click="abbruch_Click"/>
        </StackPanel>
    </DockPanel>
</Window>
