        <Style x:Key="dgRowStyleRechtsdb" TargetType="{x:Type DataGridRow}" BasedOn="{StaticResource dgRowStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding art}" Value="Gesetz">
                    <Setter Property="Background" Value="Blue" />
                    <Setter Property="Foreground" Value="LightBlue" />
                    <!--<Setter Property="ToolTip" Value="Dies sind Dateien aus der obersten / allgemeinsten Ebene (1)" />-->
                </DataTrigger>
                <DataTrigger Binding="{Binding farbnummer}" Value="2">
                    <Setter Property="Foreground" Value="darkgreen" />
                    <Setter Property="ToolTip" Value="Dies sind Dateien aus der  Ebene 2" />
                </DataTrigger>
                <DataTrigger Binding="{Binding farbnummer}" Value="3">
                    <Setter Property="Foreground" Value="DarkSalmon" />
                    <Setter Property="ToolTip" Value="Dies sind Dateien aus der  Ebene 3" />
                </DataTrigger>
                <DataTrigger Binding="{Binding farbnummer}" Value="4">
                    <Setter Property="Foreground" Value="Blue" />
                    <Setter Property="ToolTip" Value="Dies sind Dateien aus der speziellesten Ebene (4) des Sachgebietes" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="dgRowStyleRB" TargetType="{x:Type DataGridRow}" BasedOn="{StaticResource dgRowStyle}">
            <!--<Style.Triggers>
                <DataTrigger Binding="{Binding STATUS}" Value="1">
