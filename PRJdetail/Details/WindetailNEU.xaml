        <Style x:Key="dgRowStyleDokument" TargetType="{x:Type DataGridRow}" BasedOn="{StaticResource dgRowStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding revisionssicher}" Value="True">
                    <Setter Property="Background" Value="Pink" />
                    <Setter Property="Foreground" Value="{Binding ForegroundBrush, UpdateSourceTrigger=PropertyChanged}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding istNurVerwandt}" Value="True">
                    <Setter Property="Background" Value="NavajoWhite" />
                    <Setter Property="Foreground" Value="{Binding ForegroundBrush, UpdateSourceTrigger=PropertyChanged}" />
                    <Setter Property="ToolTip" Value="Dieser Eintrag ist eine Verlinkung mit einem Verwandten Vorgang" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="dgRowStyleDokumentDark" TargetType="{x:Type DataGridRow}" BasedOn="{StaticResource dgRowStyle}">
            <Setter Property="Background" Value="#3c3c3c" />
            <Setter Property="Foreground" Value="#bebebe" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding revisionssicher}" Value="True">
                    <Setter Property="Background" Value="Pink" />
                    <Setter Property="Foreground" Value="{Binding ForegroundBrush, UpdateSourceTrigger=PropertyChanged}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding istNurVerwandt}" Value="True">
                    <Setter Property="Background" Value="NavajoWhite" />
                    <Setter Property="Foreground" Value="{Binding ForegroundBrush, UpdateSourceTrigger=PropertyChanged}" />
                    <Setter Property="ToolTip" Value="Dieser Eintrag ist eine Verlinkung mit einem Verwandten Vorgang" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="kontakteTemplateStyle" TargetType="{x:Type TextBlock}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding istOnline}" Value="True">
                    <Setter Property="FontStyle" Value="Italic" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <DataTemplate x:Key="userListTemplateFDU" >
            <DataTemplate.Resources>
                <Style BasedOn="{StaticResource kontakteTemplateStyle}" TargetType="{x:Type TextBlock}" />
            </DataTemplate.Resources>
            <TextBlock  Text="{Binding Initiale}"  Tag="{Binding ID}" Uid="{Binding Initiale}" x:Name="txtitel"
                        ToolTipService.ShowDuration="30000"  Margin="0,0,0,0" Width="35" 
                        MouseDown="txtitel_MouseDown"  MouseRightButtonDown="txtitel_MouseRightButtonDown" 
                        HorizontalAlignment="Center"     
                                  >
                <TextBlock.ToolTip>
                    <ToolTip MaxWidth="400" MaxHeight="600" StaysOpen="True">
                        <StackPanel Width="400" MaxHeight="600" >
                            <TextBlock Text="{Binding tooltip}" TextWrapping="Wrap" MaxHeight="600" />
                            <Image Source="{Binding thumbnailFullPath}" Width="110" Height="70"/>
                        </StackPanel>
                    </ToolTip>
                </TextBlock.ToolTip> 
                    </TextBlock>
        </DataTemplate>
        <DataTemplate x:Key="userListTemplateBA" >
            <DataTemplate.Resources>
                <Style BasedOn="{StaticResource kontakteTemplateStyle}" TargetType="{x:Type TextBlock}" />
            </DataTemplate.Resources>
            <TextBlock  Text="{Binding Initiale}"  Tag="{Binding ID}" Uid="{Binding Initiale}" x:Name="txtitel"
                        ToolTipService.ShowDuration="30000"  Margin="0,0,0,0" Width="35" 
                        MouseDown="txtitelBA_MouseDown"  MouseRightButtonDown="txtitel_MouseRightButtonDown" 
                        HorizontalAlignment="Center"     
                                  >
                <TextBlock.ToolTip>
                    <ToolTip MaxWidth="400" MaxHeight="600" StaysOpen="True">
                        <StackPanel Width="400" MaxHeight="600" >
                            <TextBlock Text="{Binding tooltip}" TextWrapping="Wrap" MaxHeight="600" />
                            <Image Source="{Binding thumbnailFullPath}" Width="110" Height="70"/>
                        </StackPanel>
                    </ToolTip>
                </TextBlock.ToolTip> 
                    </TextBlock>
        </DataTemplate>

