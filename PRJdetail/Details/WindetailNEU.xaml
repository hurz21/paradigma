            <Setter Property="Content" Value="{Binding DOKUMENTID}" />
            <Setter Property="Width" Value="40" />
            <Setter Property="BorderBrush" Value="Black"/>
        </Style>


        <Style x:Key="dgCellStyleWF_checkbox" TargetType="{x:Type DataGridCell}">
            <!--<Setter Property="Background" Value="white" />-->
            <Style.Triggers>
                <DataTrigger Binding="{Binding ERLEDIGT}" Value="1">
                    <Setter Property="Background" Value="green" />
                    <Setter Property="ContentTemplate" >
                        <Setter.Value>
                            <DataTemplate >
                                <CheckBox IsChecked="True"  IsEnabled="False"/>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding ERLEDIGT}" Value="0">
                    <Setter Property="Background" Value="green" />
                    <Setter Property="ContentTemplate" >
                        <Setter.Value>
                            <DataTemplate >
                                <CheckBox IsChecked="false" IsEnabled="False"/>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="dgCellStyleRBTyp" TargetType="{x:Type DataGridCell}">
            <!--<Setter Property="Background" Value="white" />-->
            <Style.Triggers>
                <DataTrigger Binding="{Binding TYP}" Value="1">
                    <Setter Property="Background" Value="green" />
                    <Setter Property="ContentTemplate" >
                        <Setter.Value>
                            <DataTemplate >
                                <TextBox Text="Adresse"/>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding TYP}" Value="2">
                    <Setter Property="Background" Value="green" />
                    <Setter Property="ContentTemplate" >
                        <Setter.Value>
                            <DataTemplate >
                                <TextBox Text="Flst"/>

                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding TYP}" Value="5">
                    <Setter Property="Background" Value="green" />
                    <Setter Property="ContentTemplate" >
                        <Setter.Value>
                            <DataTemplate >
                                <TextBox Text="Foto"/>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding TYP}" Value="7">
                    <Setter Property="Background" Value="green" />
                    <Setter Property="ContentTemplate" >
                        <Setter.Value>
                            <DataTemplate >
                                <TextBox Text="Punkt"/>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding TYP}" Value="3">
                    <Setter Property="Background" Value="green" />
                    <Setter Property="ContentTemplate" >
                        <Setter.Value>
                            <DataTemplate >
                                <TextBox Text="Polygon"/>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <DataTrigger Binding="{Binding TYP}" Value="4">
                    <Setter Property="Background" Value="green" />
                    <Setter Property="ContentTemplate" >
                        <Setter.Value>
                            <DataTemplate >
                                <TextBox Text="Strecke"/>
                            </DataTemplate>
