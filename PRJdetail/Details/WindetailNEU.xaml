                <DataTrigger Binding="{Binding EreignisDokTyp}" Value="0">
                    <Setter Property="FontWeight" Value="Black" />
                </DataTrigger>
                <DataTrigger Binding="{Binding revisionssicher}" Value="1">
                    <Setter Property="Background" Value="pink" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
